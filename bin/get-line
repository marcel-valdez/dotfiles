# !/bin/bash

# Gets an indexed line counting from the bottom to the top
# unless the option -i (inverse) is given, then it
# gets an indexed line counting from the top to the bottom.

if [ "$2" = "" ]; then
  tail -$1 | head -1
  exit 0;
fi

if [ "$2" = "-i" ]; then
  head -$1 | tail -1
  exit 0;
fi
