#!/usr/bin/env bash

repetitions=$1
[ -z "${repetitions}" ] && repetitions=1

if [[ ! "${repetitions}" =~ '^[0-9]+$' ]]; then
  echo "Error: First argument must be a number (the number of beeps to make)"
  exit 1
fi

for i in $(seq ${repetitions}); do
  mplayer -noconsolecontrols -really-quiet ~/res/beep.mp3 &>/dev/null
  [ ${repetitions} -gt 1 ] && sleep 1
done

exit 0
