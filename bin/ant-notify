#!/usr/bin/env bash

build_file="-f build/build.xml"
if [ "$(basename $(pwd))" == "build" ]; then
  build_file=""
fi

ant $build_file $1 $2 $3 $4 $5 $6

result=$?
ant_command="ant $1 $2 $3 $4 $5 $6 $7 $8 $9"

if [ "$result" == "0" ]; then
  notify "Build successful!" "$ant_command"
else
  notify-send "Build failure!" "$ant_command"
fi

exit $result
