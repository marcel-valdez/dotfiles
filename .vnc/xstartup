#!/bin/sh

## Environment variables
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
# export XKL_MODMAP_DISABLE=1

## global sessions and configuration
# exec /etc/X11/xinit/xinitrc
touch $HOME/.vnc/.startup.log
[ -x /etc/vnc/xstartup ] && exec /etc/vnc/xstartup
[ -r $HOME/.Xresources ] && xrdb $HOME/.Xresources

## sessions and configurations
# x-window-manager &
# exec cinnamon-session --session=cinnamon2d &
# xsetroot -solid grey
vncconfig -iconic &
gnome-session --session=gnome-fallback &
gnome-wm --no-composite & # defaults to metacity
gnome-settings-daemon &
[ -x $HOME/.xinitrc ] && exec $HOME/.xinitrc

## visual components
gnome-panel &
x-terminal-emulator -geometry 80x24+10+10 -ls -title "$VNCDESKTOP Desktop" &

## user installed applications
type kupfer >/dev/null 2>&1 && kupfer &
